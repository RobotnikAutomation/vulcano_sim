<?xml version="1.0"?>
<launch>

  <!-- roslaunch arguments -->
  <arg name="debug" default="false"/>
  <arg name="gui" default="true"/>
  <arg name="gazebo_world" default="vulcano"/>


    <group ns="vulcano" >
    <!-- uploads robot_description and runs robot_state_publisher -->
    <include file="$(find vulcano_description)/launch/vulcano_state.launch" />
           
    <!-- TODO: join the following includes in a single file -->
    <!-- DOC: reverse port! if not specified for each arm, it crashes -->
    
    <include file="$(find vulcano_control)/launch/vulcano_control.launch" />

    <group ns="left_arm">
    <include file="$(find vulcano_control)/launch/ur10_ros_control.launch" >
        <arg name="robot_ip" value="192.168.0.210" />
        <arg name="reverse_port" value="50001"/>
        <arg name="prefix" value="left_arm_" />
    </include>
    </group>
    <!--<group ns="right_arm">-->
    <!--<include file="$(find vulcano_control)/launch/ur10_ros_control.launch" >-->
        <!--<arg name="robot_ip" value="192.168.0.211" />-->
        <!--<arg name="reverse_port" value="50003" />-->
        <!--<arg name="prefix" value="right_arm_" />-->
    <!--</include>-->
    <!--</group>-->
    <!-- launch rviz -->
    <group if="$(arg gui)">
        <node name="rviz" type="rviz" pkg="rviz" args="-d $(find vulcano_description)/launch/vulcano.rviz" />
    </group>
  </group>


</launch>
