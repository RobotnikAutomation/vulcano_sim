<?xml version="1.0"?>
<launch>

  <!-- roslaunch arguments -->
  <arg name="debug" default="false"/>
  <arg name="gui" default="true"/>
  <arg name="gazebo_world" default="vulcano"/>

  <group ns="vulcano" >

    <!-- uploads robot_description and runs robot_state_publisher -->
    <include file="$(find vulcano_description)/launch/vulcano_state.launch" />
           
    <!-- Call a python script to the run a service call to gazebo_ros to spawn a URDF robot -->
    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
          args="-urdf -model vulcano -param robot_description"/>
  
    <!-- control launch files -->
    <!--<include file="$(find vulcano_control)/launch/vulcano_control.launch" />-->

    <!-- TODO: join the following includes in a single file -->
    <!--<group ns="right_arm">-->
    <!--<include file="$(find vulcano_control)/launch/ur10_ros_control.launch" >-->
        <!--<arg name="robot_ip" value="192.168.0.202" />-->
        <!--<arg name="prefix" value="right_arm_" />-->
    <!--</include>-->
    <!--</group>-->

    <group ns="left_arm">
    <include file="$(find vulcano_control)/launch/ur10_ros_control.launch" >
        <arg name="robot_ip" value="192.168.0.201" />
        <arg name="prefix" value="left_arm_" />
    </include>
    </group>

    <include file="$(find vulcano_torso_control)/launch/vulcano_torso_control.launch" />
    <include file="$(find vulcano_base_control)/launch/vulcano_base_control.launch" />
    
    <!-- to publish joint_state -->
    <include file="$(find vulcano_gazebo)/launch/joint_state_controller.launch" />

    <!-- launch pad -->
    <include file="$(find vulcano_base_pad)/launch/vulcano_base_pad.launch" />

    <!-- launch rviz -->
    <group if="$(arg gui)">
        <node name="rviz" type="rviz" pkg="rviz" args="-d $(find vulcano_description)/launch/vulcano.rviz" />
    </group>

  </group>
  <!-- launch pad -->
  <!-- include file="$(find vulcano_pad)/launch/vulcano_pad.launch" / -->

  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find vulcano_gazebo)/worlds/$(arg gazebo_world).world"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="headless" value="false"/>
  </include>


</launch>
