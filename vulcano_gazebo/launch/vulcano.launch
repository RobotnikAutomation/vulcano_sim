<?xml version="1.0"?>
<launch>
  <arg name="limited" default="false"/>
  <arg name="paused" default="false"/>
  <arg name="gui" default="true"/>
  
  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" default="worlds/empty.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="gui" value="$(arg gui)"/>
  </include>

  <!-- send robot urdf to param server -->
  <include file="$(find vulcano_description)/launch/vulcano_state_robot.launch">
    <!-- arg name="limited" value="$(arg limited)"/ -->
  </include> 

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model robot -z 0.1" respawn="false" output="screen" />

  <!-- include file="$(find vulcano_gazebo)/launch/controller_utils.launch"/ -->

  <rosparam file="$(find vulcano_control)/config/controllers.yaml" command="load"/>

  <!-- load the controllers -->
  <!-- node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/vulcano" args="- -namespace=/vulcano
                      right_arm_trajectory_controller
                      left_arm_trajectory_controller
                      torso_trajectory_controller"/ -->

   <node name="left_arm_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn left_arm_trajectory_controller" respawn="false" output="screen"/>
   <node name="right_arm_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn right_arm_trajectory_controller" respawn="false" output="screen"/>

</launch>
